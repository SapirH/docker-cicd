node {
   def commit_id
   stage('step a') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"                        
     commit_id = readFile('.git/commit-id').trim()
   }
   stage('test') {
     nodejs(nodeJSInstallationName: 'nodejs11') {
       sh 'cd basics && npm install --only=dev'
       sh 'cd basics && npm test'
     }
   }
   stage('docker build/push') {
     docker.withRegistry('https://index.docker.io/v1/', 'cd4fb7fa-58e7-482b-ad9b-f97e5978fd5b') {
       def app = docker.build("sapirh/nodejs-demo:${commit_id}", '.').push()
     }
   }
   stage('docker run') {
     sh label: '', script: '''docker rm docker_test
      docker run --rm -tid --name docker_test -p 3000 sapirh/nodejs-demo:latest
      docker kill docker_test
      
      '''
     }
   }

